<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/border_with_background"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="calculator-1.com"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:textColor="#266D89"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/result"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M1:0"
            android:textColor="#808080"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:drawableRight="@drawable/baseline_library_books_24"
            android:layout_marginRight="10dp"
            >
        </TextView>
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="45dp"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/textline"/>
        <TextView
            android:id="@+id/process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textSize="17dp"
            >
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MC  MR  M-  M+"
        android:layout_marginLeft="35dp"
        android:textSize="15dp"
        android:textColor="#808080"
        android:layout_marginRight="30dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30dp"
                android:background="@drawable/button_number"
                />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btnDot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="60dp"
                android:background="@drawable/button_number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btnSign"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="20dp"
                android:background="@drawable/button_number"
                />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btnMinus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="->"
                android:textSize="20dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btnDivide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30dp"
                android:background="@drawable/button_number" />
            <Button
                android:id="@+id/btnEquals"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:text="="
                android:textSize="40dp"
                android:background="@drawable/button_number" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decimal places - F(changes)"
            android:layout_marginLeft="35dp"
            android:textSize="15dp"
            android:textColor="#808080"
            android:layout_marginRight="30dp"
            android:gravity="left">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PC/Mobile"
            android:layout_marginLeft="35dp"
            android:textSize="15dp"
            android:textColor="#808080"
            android:layout_marginRight="30dp"
            android:gravity="right">
        </TextView>

    </LinearLayout>
</LinearLayout>
